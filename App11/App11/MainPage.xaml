<UserControl x:Class="App11.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:data="clr-namespace:System.Windows.Controls;assembly=OpenSilver.Controls.Data">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,16,0"/>
            <TextBlock Text="Age:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="AgeTextBox" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AddButton" Content="Add" Width="80" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button x:Name="UpdateButton" Content="Update" Width="80" Margin="0,0,10,0" Click="UpdateButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete" Width="80" Margin="0,0,10,0" Click="DeleteButton_Click"/>
            <Button x:Name="ClearButton" Content="Clear" Width="80" Click="ClearButton_Click"/>
        </StackPanel>

        <data:DataGrid x:Name="PersonDataGrid"
                       Grid.Row="2"
                       AutoGenerateColumns="False"
                       IsReadOnly="True"
                       SelectionMode="Single"
                       SelectionChanged="PersonDataGrid_SelectionChanged">
            <data:DataGrid.Columns>
                <data:DataGridTextColumn Header="ID" Binding="{Binding ID}" />
                <data:DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <data:DataGridTextColumn Header="Age" Binding="{Binding Age}" />
            </data:DataGrid.Columns>
        </data:DataGrid>
    </Grid>
</UserControl>